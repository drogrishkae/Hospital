@using Microsoft.AspNetCore.Identity
@using WebApp.Models

@inject SignInManager<Member> SignInManager
@inject UserManager<Member> UserManager

@if (SignInManager.IsSignedIn(User))
{
    if (UserManager.IsInRoleAsync(UserManager.GetUserAsync(User).Result, "Admin").Result)
    {
        <li class="nav-item">
            <a class="nav-link fw-semibold text-primary" asp-action="Index" asp-controller="Admin" asp-area="Admin">Admin Panel</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link fw-semibold text-primary" asp-action="Index" asp-controller="Appointments" asp-area="Member">My Appointments</a>
        </li>
    }

    <li class="nav-item">
        <a id="manage" class="nav-link text-dark fw-semibold"
           asp-area="Identity" asp-page="/Account/Manage/Index">
            My Account
        </a>
    </li>

    <li class="nav-item">
        <form id="logoutForm" class="form-inline"
              asp-area="Identity"
              asp-page="/Account/Logout"
              asp-route-returnUrl="@Url.Action("Index", "Home")">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark fw-semibold">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark fw-semibold" id="register"
           asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark fw-semibold" id="login"
           asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="/">Login</a>
    </li>
}
