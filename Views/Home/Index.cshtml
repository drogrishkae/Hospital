@section Scripts {
    <script>
        let doctorSlide = 0;

        function moveDoctorsCarousel(direction) {
            const carousel = document.getElementById("doctorCarousel");
            const cardWidth = carousel.children[0].offsetWidth + 25;
            const totalCards = carousel.children.length;
            const visible = 3;

            const maxSlide = totalCards - visible;

            doctorSlide += direction;

            if (doctorSlide < 0) doctorSlide = 0;
            if (doctorSlide > maxSlide) doctorSlide = maxSlide;

            carousel.style.transform = `translateX(-${doctorSlide * cardWidth}px)`;
        }
    </script>
}


