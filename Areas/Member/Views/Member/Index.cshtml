@{
    var appointments = ViewBag.AppointmentDefinitions as List<WebApp.Models.AppointmentDefinition>;
}

<h2>My Appointments</h2>

<a asp-area="Member" asp-controller="Appointments" asp-action="Create" class="btn btn-primary mb-3">
    Book an Appointment
</a>

@if (appointments != null && appointments.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Patient Name</th>
                <th>Identification Number</th>
                <th>Polyclinic</th>
                <th>Doctor</th>
                <th>Date</th>
                <th>Time</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var appt in appointments)
            {
                <tr>
                    <td>@appt.PatientName</td>
                    <td>@appt.IdentificationNumber</td>
                    <td>@appt.Polyclinic</td>
                    <td>@appt.Doctor</td>
                    <td>@appt.Date</td>
                    <td>@appt.Time</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No appointments found.</p>
}