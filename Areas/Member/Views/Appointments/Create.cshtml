@model WebApp.Models.AppointmentDefinition

@{
    ViewData["Title"] = "Book Appointment";
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function submitFilterForm() {
            document.getElementById('filterForm').submit();
        }
    </script>
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="text-primary text-uppercase fw-bold border-bottom border-3 d-inline-block pb-2">
            Book Appointment
        </h1>
        <h2 class="mt-3 fw-semibold text-dark">
            Book for Yourself or Your Family
        </h2>
        <p class="text-muted">
            Please select a polyclinic, doctor, date, and time to book your appointment.
        </p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-4">
                    <h3 class="text-center text-primary mb-4 fw-bold">Available Appointments</h3>

                    <!-- Selection Form (GET) -->
                    <form id="filterForm" method="get" asp-action="Create">
                        <div class="row g-3">
                            <div class="col-md-3 col-sm-6">
                                <label class="form-label fw-semibold">Polyclinic</label>
                                <select name="polyclinicId" class="form-select"
                                        asp-items="ViewBag.Polyclinics"
                                        onchange="submitFilterForm()">
                                </select>
                            </div>
                            <div class="col-md-3 col-sm-6">
                                <label class="form-label fw-semibold">Doctor</label>
                                <select name="doctorId" class="form-select"
                                        asp-items="ViewBag.Doctors"
                                        onchange="submitFilterForm()">
                                </select>
                            </div>
                            <div class="col-md-3 col-sm-6">
                                <label class="form-label fw-semibold">Date</label>
                                <select name="dateId" class="form-select"
                                        asp-items="ViewBag.AvailableDates"
                                        onchange="submitFilterForm()">
                                </select>
                            </div>
                            <div class="col-md-3 col-sm-6">
                                <label class="form-label fw-semibold">Time</label>
                                <select name="timeId" class="form-select"
                                        asp-items="ViewBag.Times">
                                </select>
                            </div>
                        </div>
                    </form>

                    <hr class="my-4">

                    <!-- Booking Form (POST) -->
                    <form asp-action="Create" method="post" id="bookingForm">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

                        <!-- Show selected values as text or hidden fields -->
                        <input type="hidden" name="polyclinicId" value="@Model.PolyclinicID" />
                        <input type="hidden" name="doctorId" value="@Model.DoctorID" />
                        <input type="hidden" name="dateId" value="@Model.DateEntityId" />
                        <input type="hidden" name="timeId" value="@Model.TimeID" />
 
                        <div class="mb-3">
                            <label asp-for="PatientName" class="form-label fw-semibold">Patient</label>
                            <input asp-for="PatientName" class="form-control" placeholder="Enter patient name" />
                            @Html.ValidationMessageFor(m => m.PatientName, "", new { @class = "text-danger" })
                        </div>
                        <div class="mb-3">
                            <label asp-for="IdentificationNumber" class="form-label fw-semibold">Identification Number</label>
                            <input asp-for="IdentificationNumber" class="form-control" placeholder="Enter identification number" />
                            @Html.ValidationMessageFor(m => m.IdentificationNumber, "", new { @class = "text-danger" })
                        </div>

                        <div class="text-center mt-4 mb-5">
                            <input type="submit" value="Book Appointment"
                                   class="btn btn-primary px-5 py-2 fw-semibold rounded-pill" />
                        </div>

                        @Html.AntiForgeryToken()
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>




